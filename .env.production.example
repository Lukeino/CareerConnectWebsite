# Environment variables for EC2 deployment
# Copy this file to .env.production on your EC2 instance

# Production API URL - Replace with your EC2 public IP or domain
VITE_API_URL_PROD=http://YOUR-EC2-PUBLIC-IP:3001/api

# Alternative with domain name
# VITE_API_URL_PROD=https://careerconnect.yourdomain.com:3001/api

# Server configuration
NODE_ENV=production
PORT=3001

# Database path (relative to server directory)
DB_PATH=./server/db/database.sqlite

# Upload directory
UPLOAD_DIR=./uploads
